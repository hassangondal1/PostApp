<h1 class="d-flex align-items-center justify-content-center">Comment on a post</h1>

<%= form_with model: @comment, data:{turbo: false} do|form|%>

    <div class="container">
        <div class="mb-3">
            <%= form.label :Comment  %>
            <%= form.text_field :comment_field , class: "form-control" , placeholder: "Write Your Comment" %>
        </div>
    </div>
    <div class="container">
        <div class="mb-3">    
            <%= form.submit "Comment" , class: "btn btn-primary"%>
        </div>
    </div>
<% end %>